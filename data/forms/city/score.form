<?xml version="1.0" encoding="UTF-8"?>
<openapoc>
  <form id="FORM_SCORE_SCREEN">
    <style minwidth="640" minheight="480">
      <position x="centre" y="centre"/>
      <size width="640" height="480"/>
      <graphic>
        <image>xcom3/ufodata/plainbak.pcx</image>
        <position x="0" y="0"/>
        <size width="640" height="480"/>
      </graphic>

      <label id="TITLE">
        <position x="20" y="0"/>
        <size width="600" height="36"/>
        <alignment horizontal="centre" vertical="centre"/>
        <font>bigfont</font>
      </label>
      <label id="TEXT_FUNDS">
        <position x="572" y="11"/>
        <size width="60" height="10"/>
        <alignment horizontal="left" vertical="centre"/>
        <font>smalfont</font>
      </label>
      <label id="TEXT_DATE">
        <position x="77" y="90"/>
        <size width="300" height="15"/>
        <alignment horizontal="left" vertical="centre"/>
        <font>smalfont</font>
      </label>
      <label id="TEXT_WEEK">
        <position x="421" y="90"/>
        <size width="90" height="15"/>
        <alignment horizontal="right" vertical="centre"/>
        <font>smalfont</font>
      </label>

      <radiobutton id="BUTTON_SCORE" groupid="MODE">
        <tooltip text="Performance log" font="smallset"/>
        <position x="602" y="40"/>
        <size width="35" height="34"/>
        <image/>
        <imagechecked>PCK:xcom3/ufodata/newbut.pck:xcom3/ufodata/newbut.tab:67:xcom3/ufodata/base.pcx</imagechecked>
      </radiobutton>
      <radiobutton id="BUTTON_FINANCE" groupid="MODE">
        <tooltip text="Finance" font="smallset"/>
        <position x="602" y="80"/>
        <size width="35" height="34"/>
        <image/>
        <imagechecked>PCK:xcom3/ufodata/newbut.pck:xcom3/ufodata/newbut.tab:66:xcom3/ufodata/base.pcx</imagechecked>
      </radiobutton>

      <graphicbutton id="BUTTON_OK">
        <position x="602" y="443"/>
        <size width="35" height="34"/>
        <image/>
        <imagedepressed>BUTTON_OK_DEPRESSED</imagedepressed>
      </graphicbutton>

      <subform id="SCORE_VIEW" src="city/sheet_score">
        <position x="77" y="140"/>
      </subform>
      <subform id="FINANCE_VIEW" src="city/sheet_finance">
        <position x="77" y="140"/>
      </subform>

    </style>
  </form>
</openapoc>
