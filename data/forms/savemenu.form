<?xml version="1.0" encoding="UTF-8"?>
<openapoc>
  <form id="FORM_SAVEMENU">
    <style minwidth="640" minheight="480">
      <position x="centre" y="centre"/>
      <size width="644" height="484"/>
      <backcolour r="80" g="80" b="80"/>
      <graphic>
        <imagex>TESTBACKGROUND</imagex>
        <image>xcom3/ufodata/savegame.pcx</image>
        <position x="2" y="2"/>
        <size width="640" height="480"/>
        <label id="TEXT_FUNDS">
          <position x="572" y="11"/>
          <size width="60" height="10"/>
          <alignment horizontal="left" vertical="centre"/>
          <font>smalfont</font>
        </label>
        <scroll id="SCROLL_LISTPOSITION">
          <position x="550" y="90"/>
          <size width="16" height="330"/>
        </scroll>
        <listbox id="LISTBOX_OPTIONS" scrollbarid="SCROLL_LISTPOSITION">
          <position x="40" y="100"/>
          <size width="505" height="310"/>
          <item size="30" spacing="5"/>
          <control id="EXISTING_SAVE_SLOT">
            <size width="100%" height="item"/>
            <textbutton>
              <size width="100%" height="item"/>
              <font>smalfont</font>
            </textbutton>
            <textedit id="TEXTEDIT_SAVE_NAME">
              <size width="100%" height="100%"/>
              <position x="110" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </textedit>
            <label id="LABEL_NAME" text="existing save slot template">
              <size width="100%" height="100%"/>
              <position x="110" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </label>
            <label id="LABEL_TIME" text="12/12/2016 12:12:31">
              <size width="100%" height="100%"/>
              <position x="5" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </label>
            <label id="LABEL_DIFFICULTY" text="SUPERHUMAN">
              <size width="100%" height="100%"/>
              <position x="300" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </label>
            <label id="LABEL_INGAME_DAY" text="Day 00000">
              <size width="100%" height="100%"/>
              <position x="400" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </label>
            <label id="LABEL_INGAME_TIME" text="00:00:00">
              <size width="100%" height="100%"/>
              <position x="450" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </label>
          </control>
          <control id="NEW_SAVE_SLOT" visible="N">
            <size width="100%" height="item"/>
            <textbutton>
              <size width="100%" height="item"/>
              <font>smalfont</font>
            </textbutton>
            <textedit id="TEXTEDIT_SAVE_NAME" visible="N">
              <size width="100%" height="100%"/>
              <position x="110" y="centre"/>
              <alignment vertical="centre"/>
              <font>smalfont</font>
            </textedit>
            <label id="LABEL_NAME" text="New save slot">
              <size width="100%" height="100%"/>
              <position x="0" y="centre"/>
              <alignment horizontal="centre" vertical="centre"/>
              <font>smalfont</font>
            </label>
          </control>
        </listbox>
      </graphic>
      <graphicbutton id="BUTTON_QUIT">
        <position x="604" y="446"/>
        <size width="35" height="34"/>
        <image/>
        <imagedepressed>BUTTON_OK_DEPRESSED</imagedepressed>
      </graphicbutton>
      <label id="LABEL_SAVEGAME" text="SAVE GAME" visible="N">
        <position x="20" y="0"/>
        <size width="600" height="36"/>
        <alignment horizontal="centre" vertical="centre"/>
        <font>bigfont</font>
      </label>
      <label id="LABEL_LOADGAME" text="LOAD GAME" visible="N">
        <position x="20" y="0"/>
        <size width="600" height="36"/>
        <alignment horizontal="centre" vertical="centre"/>
        <font>bigfont</font>
      </label>
      <label id="LABEL_DELETEGAME" text="DELETE OLD SAVED GAME" visible="N">
        <position x="20" y="0"/>
        <size width="600" height="36"/>
        <alignment horizontal="centre" vertical="centre"/>
        <font>bigfont</font>
      </label>
    </style>
  </form>
</openapoc>
